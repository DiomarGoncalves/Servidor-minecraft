{
   "format_version":"1.10",
   "minecraft:attachable":{
      "description":{
         "identifier":"true:walkie_talkie",
         "materials":{
            "default":"entity_alphatest"
         },
         "textures":{
            "default":"textures/handheld/walkie_talkie"
         },
         "scripts":{
            "pre_animation":[
               "v.main_hand = c.item_slot == 'main_hand';"
            ],
            "animate":[
               {
                  "first_person_main_hand":"(v.main_hand && c.is_first_person) && !query.is_sneaking"
               },
               {
                  "first_person_sneaking_main_hand":"(v.main_hand && c.is_first_person) && query.is_sneaking"
               },
               {
                  "third_person_main_hand":"v.main_hand && !c.is_first_person"
               }
            ]
         },
         "animations":{ 
            "first_person_main_hand":"animation.walkie_talkie.first_person_main_hand",
            "first_person_sneaking_main_hand":"animation.walkie_talkie.first_person_sneaking_main_hand",
            "third_person_main_hand":"animation.walkie_talkie.third_person_main_hand"
         },
         "geometry":{
            "default":"geometry.walkie_talkie"
         },
         "render_controllers":[
            "controller.render.default"
         ]
      }
   }
}