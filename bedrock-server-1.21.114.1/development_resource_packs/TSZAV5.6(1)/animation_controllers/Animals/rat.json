{
   "format_version":"1.10.0",
   "animation_controllers":{
      "controller.animation.rat":{
         "initial_state":"default",
         "states":{
            "default":{
               "animations":[
                  {
                     "idle":"query.modified_move_speed  <= 0.01"
                  }
               ],
               "transitions":[
                  {
                     "walk":"query.modified_move_speed  >= 0.01"
                  },
                  {
                     "attack":"variable.attack_time > 0.0"
                  }
               ],
               "blend_transition":0.1
            },
            "walk":{
               "animations":[
                  "walk"
               ],
               "transitions":[
                  {
                     "default":"query.modified_move_speed  <= 0.01"
                  },
                  {
                     "attack":"variable.attack_time > 0.0"
                  }
               ],
               "blend_transition":0.1
            },
            "attack":{
               "animations":[
                  "attack"
               ],
               "transitions":[
                  {
                     "default":"variable.attack_time <= 0"
                  }
               ],
               "blend_transition":0.1
            }
         }
      }
   }
}