{
   "format_version":"1.10.0",
   "animation_controllers":{
      "controller.animation.bicycle":{
         "initial_state":"default",
         "states":{
            "default":{
               "animations":[
                  "stand",
                  {
                     "ride":"query.modified_move_speed"
                  }
               ],
               "blend_transition":0.1,
               "blend_via_shortest_path":true,
               "transitions":[
                  {
                     "no_rider":"!query.has_rider"
                  }
               ]
            },
            "no_rider":{
               "animations":[
                  "no_rider"
               ],
               "blend_transition":0.2,
               "blend_via_shortest_path":true,
               "transitions":[
                  {
                     "default":"query.has_rider"
                  }
               ]
            },
            "ride":{
               "animations":[
                  "ride"
               ],
               "blend_transition":1.0,
               "blend_via_shortest_path":true,
               "transitions":[
                  {
                     "ride":"query.modified_move_speed"
                  }
               ]
            }
         }
      }
   }
}