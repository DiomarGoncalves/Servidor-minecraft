{
   "format_version":"1.10.0",
   "minecraft:client_entity":{
      "description":{
         "identifier":"true:soldier",
         "materials":{
            "default":"entity_emissive_alpha"
         },
         "textures":{
            "default":"textures/entity/human_soldier/soldier"
         },
         "geometry":{
            "default":"geometry.human"
         },
         "animations":{
            "look_at_target":"animation.common.look_at_target",
            "idle":"animation.human.idle",
            "walking":"animation.human.walking",
            "attacking":"animation.human.attacking",
            "assult_hold":"animation.human.assult_hold",
            "assult_walking":"animation.human.assult_walking",
            "human":"controller.animation.human",
            "human_attacking":"controller.animation.human_attacking"
         },
         "scripts":{
            "pre_animation":[
               "variable.assult = query.get_equipped_item_name('main_hand') == 'scar_h_npc';"
            ],
            "animate":[
               "human",
               "human_attacking",
               {
                  "assult_hold":"variable.assult && !query.is_moving"
               },
               {
                  "assult_walking":"variable.assult && query.is_moving"
               }
            ]
         },
         "render_controllers":[
            "controller.render.human"
         ],
         "enable_attachables":true
      }
   }
}