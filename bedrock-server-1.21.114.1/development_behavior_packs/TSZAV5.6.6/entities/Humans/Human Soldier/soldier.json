{
   "format_version":"1.21.0",
   "minecraft:entity":{
      "description":{
         "identifier":"true:soldier",
         "spawn_category":"creature",
         "is_spawnable":false,
         "is_summonable":true
      },
      "component_groups":{
         "true:default":{
            "minecraft:is_saddled":{
               
            },
            "minecraft:type_family":{
               "family":[
                  "human"
               ]
            },
            "minecraft:equipment":{
               "table":"loot_tables/equipment/humans/soldier.json",
               "slot_drop_chance":[
                  {
                     "slot":"slot.weapon.mainhand",
                     "drop_chance":0.0
                  }
               ]
            },
            "minecraft:behavior.nearest_attackable_target":{
               "priority":0,
               "must_see":true,
               "reselect_targets":true,
               "within_radius":16.0,
               "entity_types":[
                  {
                     "filters":{
                        "any_of":[
                           {
                              "test":"is_family",
                              "subject":"other",
                              "value":"apocalypse"
                           }
                        ]
                     },
                     "max_dist":16
                  }
               ]
            },
            "minecraft:follow_range":{
               "value":16,
               "max":16
            },
            "minecraft:entity_sensor":{
               "subsensors":[
                  {
                     "minimum_count":1,
                     "event_filters":{
                        "any_of":[
                           {
                              "test":"is_family",
                              "subject":"other",
                              "value":"bullet"
                           }
                        ]
                     },
                     "event":"true:use_bullet"
                  }
               ]
            },
            "minecraft:environment_sensor":{
               "triggers":[
                  {
                     "filters":{
                        "all_of":[
                           {
                              "test":"is_difficulty",
                              "subject":"self",
                              "operator":"equals",
                              "value":"peaceful"
                           }
                        ]
                     },
                     "event":"true:to_peaceful"
                  }
               ]
            },
            "minecraft:behavior.random_stroll":{
               "priority":4,
               "speed_multiplier":1.0
            },
            "minecraft:movement":{
               "value":0.26
            },
            "minecraft:behavior.ranged_attack":{
               "attack_interval_min":30,
               "attack_interval_max":30,
               "charge_charged_trigger":1.0,
               "charge_shoot_trigger":1.0,
               "attack_radius":16,
               "burst_shots":30,
               "burst_interval":0.5
            },
            "minecraft:shooter":{
               "def":"true:bullet<true:to_556mm>"
            }
         },
         "true:dead":{
            "minecraft:transformation":{
               "into":"true:soldier_corpse<true:to_default>"
            }
         },
         "true:peaceful":{
            "minecraft:transformation":{
               "into":"true:despawn"
            }
         }
      },
      "components":{
         "minecraft:collision_box":{
            "width":0.9,
            "height":1.8
         },
         "minecraft:health":{
            "value":80,
            "max":80
         },
         "minecraft:scale":{
            "value":1.0
         },
         "minecraft:hurt_on_condition":{
            "damage_conditions":[
               {
                  "filters":{
                     "test":"in_lava",
                     "subject":"self",
                     "operator":"==",
                     "value":true
                  },
                  "cause":"lava",
                  "damage_per_tick":4
               }
            ]
         },
         "minecraft:navigation.generic":{
            "can_path_over_water":true,
            "avoid_water":true,
            "avoid_damage_blocks":true
         },
         "minecraft:jump.static":{
            
         },
         "minecraft:movement.basic":{
            
         },
         "minecraft:behavior.hurt_by_target":{
            "priority":1
         },
         "minecraft:behavior.look_at_player":{
            "priority":7,
            "look_distance":6.0,
            "probability":0.02
         },
         "minecraft:behavior.random_look_around":{
            "priority":9
         },
         "minecraft:behavior.float":{
            "priority":0
         },
         "minecraft:persistent":{
            
         },
         "minecraft:damage_sensor":{
            "triggers":[
               {
                  "on_damage":{
                     "filters":{
                        "all_of":[
                           {
                              "test":"has_damage",
                              "value":"fatal"
                           }
                        ]
                     },
                     "event":"true:to_dead"
                  }
               }
            ]
         },
         "minecraft:behavior.equip_item":{
            "priority":2
         },
         "minecraft:on_hurt_by_player":{
            "event":"true:hurt",
            "target":"self"
         },
         "minecraft:on_hurt":{
            "event":"true:hurt",
            "target":"self"
         },
         "minecraft:pushable":{
            "is_pushable":true,
            "is_pushable_by_piston":true
         },
         "minecraft:physics":{
            
         }
      },
      "events":{
         "minecraft:entity_spawned":{
            "add":{
               "component_groups":[
                  "true:default"
               ]
            }
         },
         "true:to_dead":{
            "add":{
               "component_groups":[
                  "true:dead"
               ]
            },
            "queue_command":{
               "command":[
                  "particle true:blood_splatter ^ ^1 ^",
                  "particle true:blood_splatter ^ ^2 ^"
               ]
            }
         },
         "true:hurt":{
            "queue_command":{
               "command":[
                  "particle true:blood_splatter ^ ^1 ^",
                  "particle true:blood_splatter ^ ^2 ^"
               ]
            }
         },
         "true:to_peaceful":{
            "add":{
               "component_groups":[
                  "true:peaceful"
               ]
            }
         },
         "true:use_bullet":{
            "queue_command":{
               "command":[
                  "playsound scar_h_shooting @a [r=16] ~ ~ ~"
               ]
            }
         }
      }
   }
}