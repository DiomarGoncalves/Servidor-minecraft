{
   "format_version":"1.10.0",
   "animation_controllers":{
      "controller.animation.human":{
         "initial_state":"default",
         "states":{
            "default":{
               "animations":[
                  "look_at_target",
                  {
                     "idle":"query.modified_move_speed <= 0.1 && !query.is_saddled"
                  }
               ],
               "blend_transition":0.5,
               "blend_via_shortest_path":true,
               "transitions":[
                  {
                     "walking":"query.modified_move_speed > 0.1 && !query.is_saddled"
                  }
               ]
            },
            "walking":{
               "animations":[
                  "walking",
                  "look_at_target"
               ],
               "blend_transition":0.5,
               "blend_via_shortest_path":true,
               "transitions":[
                  {
                     "default":"query.modified_move_speed <= 0.1 && !query.is_saddled"
                  }
               ]
            }
         }
      },
      "controller.animation.human_attacking":{
         "initial_state":"default",
         "states":{
            "default":{
               "animations":[
                  "look_at_target",
                  {
                     "idle":"query.modified_move_speed <= 0.1 && !query.is_saddled"
                  }
               ],
               "blend_transition":1.0,
               "blend_via_shortest_path":true,
               "transitions":[
                  {
                     "attacking":"variable.attack_time > 0.1 && !query.is_saddled"
                  }
               ]
            },
            "attacking":{
               "animations":[
                  "attacking"
               ],
               "blend_transition":1.0,
               "blend_via_shortest_path":true,
               "transitions":[
                  {
                     "default":"variable.attack_time <= 0.1 && !query.is_saddled"
                  }
               ]
            }
         }
      }
   }
}