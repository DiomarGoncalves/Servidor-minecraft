{
   "format_version":"1.21.0",
   "minecraft:entity":{
      "description":{
         "identifier":"true:proximity_mine",
         "spawn_category":"creature",
         "is_spawnable":true,
         "is_summonable":true
      },
      "component_groups":{
         "true:proximity_mine_off":{
            "minecraft:variant":{
               "value":0
            },
            "minecraft:interact":{
               "interactions":[
                  {
                     "hurt_item":1,
                     "on_interact":{
                        "filters":{
                           "all_of":[
                              {
                                 "test":"has_tag",
                                 "subject":"other",
                                 "operator":"equals",
                                 "value":"breaking_tool"
                              },
                              {
                                 "test":"is_sneaking",
                                 "subject":"other",
                                 "operator":"equals",
                                 "value":false
                              }
                           ]
                        },
                        "event":"true:pick_up",
                        "target":"self"
                     },
                     "add_items":{
                        "table":"loot_tables/pick_ups/proximity_mine.json"
                     },
                     "use_item":false,
                     "play_sounds":"saddle",
                     "interact_text":"action.interact.pick_up"
                  },
                  {
                     "on_interact":{
                        "filters":{
                           "all_of":[
                              {
                                 "test":"is_sneaking",
                                 "subject":"other",
                                 "operator":"equals",
                                 "value":true
                              }
                           ]
                        },
                        "event":"true:activate",
                        "target":"self"
                     },
                     "use_item":false,
                     "play_sounds":"tripod",
                     "interact_text":"action.interact.activate"
                  }
               ]
            }
         },
         "true:proximity_mine_activating":{
            "minecraft:variant":{
               "value":0
            },
            "minecraft:timer":{
               "looping":false,
               "randomInterval":false,
               "time":5,
               "time_down_event":{
                  "event":"true:timer_up"
               }
            }
         },
         "true:proximity_mine_active":{
            "minecraft:variant":{
               "value":1
            },
            "minecraft:entity_sensor":{
               "subsensors":[
                  {
                     "range":[
                        1,
                        2.5
                     ],
                     "minimum_count":1,
                     "event_filters":{
                        "any_of":[
                           {
                              "test":"is_family",
                              "subject":"other",
                              "operator":"not",
                              "value":"vampire"
                           }
                        ]
                     },
                     "event":"true:explode"
                  }
               ]
            }
         },
         "true:proximity_mine_exploding":{
            "minecraft:variant":{
               "value":1
            },
            "minecraft:explode":{
               "fuse_length":{
                  "range_min":0.0,
                  "range_max":0.0
               },
               "fuse_lit":true,
               "power":4,
               "causes_fire":true
            }
         },
         "true:despawn":{
            "minecraft:transformation":{
               "into":"true:despawn"
            }
         }
      },
      "components":{
         "minecraft:type_family":{
            "family":[
               "proximity_mine"
            ]
         },
         "minecraft:collision_box":{
            "width":0.6,
            "height":0.8
         },
         "minecraft:damage_sensor":{
            "triggers":[
               {
                  "on_damage":{
                     "filters":{
                        "test":"is_family",
                        "subject":"other",
                        "value":"player"
                     }
                  },
                  "deals_damage":false
               }
            ]
         },
         "minecraft:health":{
            "value":9999,
            "max":9999
         },
         "minecraft:scale":{
            "value":0.5
         },
         "minecraft:knockback_resistance":{
            "value":100,
            "max":100
         },
         "minecraft:physics":{
            
         }
      },
      "events":{
         "minecraft:entity_spawned":{
            "add":{
               "component_groups":[
                  "true:proximity_mine_off"
               ]
            }
         },
         "true:activate":{
            "remove":{
               "component_groups":[
                  "true:proximity_mine_off"
               ]
            },
            "add":{
               "component_groups":[
                  "true:proximity_mine_activating"
               ]
            }
         },
         "true:timer_up":{
            "remove":{
               "component_groups":[
                  "true:proximity_mine_activating"
               ]
            },
            "add":{
               "component_groups":[
                  "true:proximity_mine_active"
               ]
            }
         },
         "true:explode":{
            "remove":{
               "component_groups":[
                  "true:proximity_mine_active"
               ]
            },
            "add":{
               "component_groups":[
                  "true:proximity_mine_exploding"
               ]
            }
         },
         "true:pick_up":{
            "add":{
               "component_groups":[
                  "true:despawn"
               ]
            }
         }
      }
   }
}