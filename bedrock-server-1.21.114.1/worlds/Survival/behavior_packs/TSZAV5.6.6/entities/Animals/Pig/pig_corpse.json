{
   "format_version":"1.21.0",
   "minecraft:entity":{
      "description":{
         "identifier":"true:pig_corpse",
         "spawn_category":"creature",
         "is_spawnable":false,
         "is_summonable":true
      },
      "component_groups":{
         "true:dead_1":{
            "minecraft:is_sheared":{
               
            }
         },
         "true:default":{
            "minecraft:variant":{
               "value":0
            },
            "minecraft:interact":{
               "interactions":[
                  {
                     "hurt_item":4,
                     "spawn_items":{
                        "table":"loot_tables/dead_animals/pig.json"
                     },
                     "on_interact":{
                        "filters":{
                           "any_of":[
                              {
                                 "test":"has_tag",
                                 "subject":"other",
                                 "operator":"equals",
                                 "value":"sharp_tool"
                              }
                           ]
                        },
                        "event":"true:to_skeleton",
                        "target":"self"
                     },
                     "play_sounds":"saddle",
                     "interact_text":"action.interact.use_tool"
                  }
               ]
            },
            "minecraft:timer":{
               "looping":false,
               "randomInterval":false,
               "time":16,
               "time_down_event":{
                  "event":"true:to_skeleton_timer"
               }
            }
         },
         "true:skeleton":{
            "minecraft:variant":{
               "value":1
            },
            "minecraft:interact":{
               "interactions":[
                  {
                     "hurt_item":1,
                     "spawn_items":{
                        "table":"loot_tables/dead_animals/pig_skeleton.json"
                     },
                     "on_interact":{
                        "filters":{
                           "all_of":[
                              {
                                 "test":"has_tag",
                                 "subject":"other",
                                 "operator":"equals",
                                 "value":"breaking_tool"
                              }
                           ]
                        },
                        "event":"true:to_despawn",
                        "target":"self"
                     },
                     "play_sounds":"tripod",
                     "interact_text":"action.interact.loot_skeleton"
                  }
               ]
            },
            "minecraft:timer":{
               "looping":false,
               "randomInterval":false,
               "time":10,
               "time_down_event":{
                  "event":"true:to_despawn"
               }
            }
         },
         "true:despawn":{
            "minecraft:transformation":{
               "into":"true:despawn"
            }
         }
      },
      "components":{
         "minecraft:type_family":{
            "family":[
               "corpse",
               "animal"
            ]
         },
         "minecraft:collision_box":{
            "width":0.9,
            "height":0.9
         },
         "minecraft:health":{
            "value":40,
            "max":40
         },
         "minecraft:scale":{
            "value":1.0
         },
         "minecraft:knockback_resistance":{
            "value":100,
            "max":100
         },
         "minecraft:despawn":{
            "filters":{
               "test":"distance_to_nearest_player",
               "subject":"self",
               "operator":">",
               "value":32
            }
         },
         "minecraft:damage_sensor":{
            "triggers":[
               {
                  "on_damage":{
                     "filters":{
                        "test":"is_family",
                        "subject":"other",
                        "value":"player"
                     }
                  },
                  "deals_damage":false
               }
            ]
         },
         "minecraft:physics":{
            
         }
      },
      "events":{
         "true:to_default":{
            "add":{
               "component_groups":[
                  "true:default",
                  "true:dead_1"
               ]
            }
         },
         "true:to_skeleton":{
            "add":{
               "component_groups":[
                  "true:skeleton"
               ]
            },
            "remove":{
               "component_groups":[
                  "true:default"
               ]
            },
            "queue_command":{
               "command":[
                  "particle true:blood_splatter ^ ^1 ^",
                  "particle true:blood_splatter ^ ^1.5 ^"
               ]
            }
         },
         "true:to_skeleton_timer":{
            "add":{
               "component_groups":[
                  "true:skeleton"
               ]
            },
            "remove":{
               "component_groups":[
                  "true:default"
               ]
            }
         },
         "true:to_despawn":{
            "add":{
               "component_groups":[
                  "true:despawn"
               ]
            }
         }
      }
   }
}